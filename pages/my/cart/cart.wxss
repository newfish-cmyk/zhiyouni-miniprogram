page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scroll{
  background: -webkit-linear-gradient(bottom,#93C4B0,white);
  height: 100%;
}

.v1{
  height: 300rpx;
}

.list .goods{
  height: 260rpx;
  width: 100%;
  margin: auto;
  border-bottom: 2px solid gray;
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.list .goods .circle{
  display: flex;
  /* flex-direction: column;
  justify-content: center; */
  margin-top: 90rpx;
  margin-left: 50rpx;
  margin-right: 20rpx;
}

.list .goods .visiable{
  width: 100%;
  height: 100%;
  display: flex;
  /* flex-direction: column; */
  /* justify-content: center; */
  /* padding: 0 20rpx 0 20rpx; */
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx); 
  margin-left: -200rpx;
  margin-right: 50rpx;
}

.delete{
  width: 150rpx;
  height: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #93C4B0;
  color: #fff;
  font-size: 32rpx;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touchmove .visiable{
  margin-left: -100rpx;
}

.touchmove .visiable{
  -webkit-transform: translateX(0) !important;
  transform: translateX(0) !important;
}

.touchmove .delete {
  -webkit-transform: translateX(0) !important;
  transform: translateX(0) !important;
}

.list .goods .visiable .left{
  width: 220rpx;
  height: 220rpx;
  /* margin-left: 50rpx; */
  margin-top: 10rpx;
  border-radius: 20%;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.list .goods .visiable .left image{
  width: 100%;
  height: 100%;
  border-radius: 20%;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
}

.list .goods .visiable .right{
  display: flex;
  flex-direction: column;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 30rpx;
}

.list .goods .name{
  font-size: 18px;
  color: #5f6377;

}

.list .goods .value{
  font-size: 15px;
  color: #ec6968;
  
}

.bottom{
  height: 320rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: -webkit-linear-gradient(bottom,#93C4B0,white);
  border-top-left-radius: 60rpx;
  border-top-right-radius: 60rpx;
}

.bottom .upper{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  /* border-bottom: 2px solid lightgray; */
}

.bottom .upper .pay{
  /* padding-top: 30rpx; */
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin: auto;
}

.bottom .upper .pay .small{
  font-size: 15px;
  color: #8a8b8c;
}

.bottom .upper .pay .small_o{
  font-size: 15px;
  color: #eb6569;
}

.bottom .under{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 200rpx;
}

.bottom .under .realpay{
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin: auto;
  border-top: 2px solid #dddce8;
  /* padding-top: 30rpx; */
}

.bottom .under .realpay .big{
  font-size: 18px;
  color: #8a8b8c;
}

.bottom .under .realpay .big_o{
  font-size: 18px;
  color: #eb6569;
}

.bottom .under .buy{
  margin: auto;
  border-radius: 15px;
  height: 100rpx;
  width: 70%;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottom .under .buy text{
  margin: auto;
  font-size: 20px;
  color: #8a8b8c;
}