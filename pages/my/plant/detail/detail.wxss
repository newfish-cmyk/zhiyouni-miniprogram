/* pages/my/plant/detail/detail.wxss */
page{
  background: -webkit-linear-gradient(bottom,#93C4B0,white);
}

.calendar{
  height: 480rpx;
  width: 100%;
  /* border: black solid 2px; */
}

.calendar .top{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.calendar .date{
  height: 100rpx;
  /* width: 100%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 20px;
  font-weight: 600;
  /* border: 2px solid black; */
}

.calendar .body{
  height: 360rpx;
  width: 100%;
  border-top: 1px solid gray;
  border-bottom: 1px solid gray;
}

.calendar .week {
  line-height: 40rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #999;
  display: flex;
  justify-content: space-around;
}

.calendar .week .view {
  width: 100rpx;
  text-align: center;
}

.calendar .main {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding: 30rpx 25rpx;
  transition: height 0.3s;
  align-content: flex-start;
  overflow: hidden;
}

.calendar .main .day_gray {
  position: relative;
  width: 100rpx;
  color: #666;
  text-align: center;
  height: 54rpx;
}

.calendar .main .day_black {
  position: relative;
  width: 100rpx;
  color: #000;
  text-align: center;
  height: 54rpx;
}

/* .bottom{
  border: 2px solid black;
} */

.bottom .title{
  font-size: 20px;
  font-weight: 600;
  margin-left: 5%;
  margin-top: 20rpx;
}

.bottom .choose{
  width: 80%;
  margin: auto;
}

.choose_item{
  width: 100%;
  height: 80rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  margin-top: 20rpx;
  border-radius: 10px;
  display: flex;
  justify-content: space-around;

}

.choose_item .text{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 17px;
}