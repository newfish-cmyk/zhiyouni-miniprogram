
.rotation{
  height: 300px;
  margin-bottom: 50rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  border-bottom-left-radius: 80px;
  /* position: fixed;
  z-index: 10; */
}

.rotation .rotation_item{
  width: 100%;
  height: 100%;
  /* border-bottom-left-radius: 80px;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15); */
  position: fixed;
  z-index: 10;
}

.rotation .rotation_item image{
  width: 100%;
  height: 100%;
  border-bottom-left-radius: 80px;
  /* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15); */
  position: fixed;
  z-index: 10;
}

page{
  background: -webkit-linear-gradient(bottom,#91c4ae,white);
  height: 100%;
}

.information{
  /* margin-top: 50rpx; */
  height: 100%;
  display: flex;
  flex-direction: column;
}

.information .information_item{
  display: flex;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.front{
  box-shadow: 20rpx 20rpx 20rpx 0 rgba(0, 0, 0, 0.2);
  background-color: #90c4ae;
  font-size: 15px;
  width: 30px;
  border-radius: 10%;
  margin-right: 50rpx;
}

.information_item text{
  font-size: 14px;
}

.v2{
  height: 30rpx;
}

.bottom{
  height: 50px;
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: flex-end;
}

.bottom .buy{
  width: 120px;
  background-color: #d7ede6;
  border-top-left-radius: 15%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottom .buy text{
  font-size: 18px;
  margin: auto;
}